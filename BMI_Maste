import java.util.Scanner;

public class BMI_Master_AniruddhaMadhusudanDhir {
    public static void main(String[] args) {
        newMsg();
        String input = chooseVersion();
        retake(input);
    }

    public static void newMsg(){
        System.out.println("My CSC 215 BMI Calculator Projects:");
        System.out.println("    1. BMI, English");
        System.out.println("    2. BMI, Metric");
    }

    public static String chooseVersion(){
        Scanner scanner = new Scanner(System.in);

        System.out.println("[ USER MANUAL ] Enter an exclamation mark ! to end.");
        System.out.println("Please enter the version you want to try: ");
        String input = scanner.nextLine();
        return input;
    }

    public static void retake(String input) {
        if(englishAMDVersion(input)){
            BMI_CSC215_English_AniruddhaMadhusudanDhir.run();
        } else if (metricAMDVersion(input)) {
            BMI_CSC215_Metric_AniruddhaMadhusudanDhir.run();
        }else{
            return;
        }
    }

    public static boolean englishAMDVersion(String input) {
        return correctString(input).equalsIgnoreCase("English");
    }

    // Method to clean and check if the string is a variant of "European"
    public static boolean metricAMDVersion(String input) {
        return correctString(input).equalsIgnoreCase("Metric");
    }

    public static String correctString(String input) {
        return input.replaceAll("[^a-zA-Z]", "");  // Keep only alphabetic characters
    }
}

